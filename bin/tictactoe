#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)
require 'tictactoe'

game_creator = TicTacToe::GameCreator.new(STDOUT)
game_creator.opening_message
game_creator.choose_type
game_creator.set_markers
game_creator.set_player_turns

game_controller = TicTacToe::GameController.new(STDOUT, game_creator.game)
game_controller.start_game
